<h1 class="mt-5">Statistiques des brokers</h1>

<% @brokers_data.each do |item|%>
<div class="broker-section mt-5" >  
  <table class="table">
    <thead>
      <tr>
        <th colspan="3"><%= item[:name]%></th>
      </tr>
    </thead>
    <tbody>
      <% item[:data].each do |data| %>
       <tr>

        <td><%= data[:category] %></td>
        <td><%= data[:count] %></td>
    
      <tr>
      <% end %>
        
    </tbody>
  </table>

</div>
<%end%>
