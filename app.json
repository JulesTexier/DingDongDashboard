{
  "name": "Ding Dong app",
  "description": "The famous app of hellodingdong.com",
  "env": {
  },
  "formation": {
    "test": {
      "quantity": 1,
      "size": "standard-1x"
    }
  },
  "addons": [
  ],
  "buildpacks": [
    { "url": "heroku/ruby" },
    { "url": "https://github.com/heroku/heroku-buildpack-google-chrome"},
    { "url": "https://github.com/heroku/heroku-buildpack-chromedriver"}
  ],
  "environments": {
    "test": {
      "env": {
        "WD_CHROME_PATH": "/app/.apt/usr/bin/google-chrome-stable"
      },
      "addons": ["heroku-postgresql:in-dyno", "heroku-redis:in-dyno"],
      "scripts":
        {
          // "test": "bundle exec rspec -fd"
          // "test": "bundle exec rspec spec/models/subscriber_spec.rb"
          "configure-web-driver" : "bundle exec rake webdrivers:chromedriver:update WD_CHROME_PATH=/app/.apt/usr/bin/google-chrome-stable",
          "rspec": "bundle exec rspec spec/services/scrapers/scraper_bien_ici_spec.rb" 
        }
    }
  }
}