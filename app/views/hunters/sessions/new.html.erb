<div class="text-center row justify-content-center mt-5">
  <%= form_for(resource, class: "form-signin col-4", as: resource_name, url: session_path(resource_name)) do |f| %>
        <img class="mb-5" src="https://hellodingdong.com/assets/images/logo-ding-dong-full.png" alt="" height="40">
        <h1 class="h3 mb-3 font-weight-normal">Veuillez vous identifier svp</h1>
        
        <div class="raw">
          <div class="col-12 mb-4">
            <div class="field">
              <%= f.label :email, class:"sr-only" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
            </div>
          </div>
          <div class="col-12">
            <div class="field">
              <%= f.label :password, class:"sr-only" %>
              <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Mot de passe" %>
            </div>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mt-2">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Se connecter", class:"btn btn-lg btn-primary btn-block" %>
        </div>

        <p class="mt-5 mb-3 text-muted">Â© 2020</p>
  <% end %>

</div>

